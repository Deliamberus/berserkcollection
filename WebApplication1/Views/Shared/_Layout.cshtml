@{
    ViewData["Title"] = "Легенды Лаара";
}
<!DOCTYPE html>
<html class="h-100" lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.2.0/dist/spacelab/bootstrap.min.css" rel="stylesheet"
          integrity="sha256-L3JwfgXC2+0+6cZ8HKUiCfsF3wdUzkcZqLEq+Z9A6Us=" crossorigin="anonymous">
    <link href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="/css/main.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"
            integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0="
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/5e17f6e64e.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>

    <script src="/js/main.js"></script>
</head>
<body class="d-flex flex-column h-100">
    <nav class="navbar navbar-dark bg-dark py-0">
        <div class="container-xxl d-flex" style="justify-content:left">
            <div class="navbar-brand me-0 me-lg-3 flex-grow-0" href="/" style="white-space:nowrap;">
                <span class="d-none d-sm-inline ps-1 ">Берсерк</span>
            </div>
        </div>
    </nav>
    <form method="post" class="text-center">
        <div class="container-xxl d-flex mt-2 mb-2">
            <img id="plains" type="element" class="filter icon-img mx-1" src="/images/icons/element-plains.png">
            <img id="mountains" type="element" class="filter icon-img mx-1" src="/images/icons/element-mountains.png">
            <img id="forests" type="element" class="filter icon-img mx-1" src="/images/icons/element-forests.png">
            <img id="swamps" type="element" class="filter icon-img mx-1" src="/images/icons/element-swamps.png">
            <img id="dark" type="element" class="filter icon-img mx-1" src="/images/icons/element-dark.png">
            <img id="neutral" type="element" class="filter icon-img mx-1" src="/images/icons/element-neutral.png">
            <img id="common" type="rare" class="filter icon-img mx-1" src="/images/icons/common.png">
            <img id="uncommon" type="rare" class="filter icon-img mx-1" src="/images/icons/uncommon.png">
            <img id="rare" type="rare" class="filter icon-img mx-1" src="/images/icons/rare.png">
            <img id="ultrarare" type="rare" class="filter icon-img mx-1" src="/images/icons/ultrarare.png">
            <img id="ordinary" type="currency" class="filter icon-img mx-1" src="/images/icons/icon-ordinary.png">
            <img id="elite" type="currency" class="filter icon-img mx-1" src="/images/icons/icon-elite.png">
            <img id="legendsSet" type="set" class="filter icon-img mx-1" src="/images/icons/rarity-common-ll.png">
            <img id="warSet" type="set" class="filter icon-img mx-1" src="/images/icons/rarity-common-1.png">
            <img id="darkSet" type="set" class="filter icon-img mx-1" src="/images/icons/rarity-common-2.png">
            <img id="check" type="availability" class="icon-img mx-1 gray" src="/images/icons/check.png">
            <img id="cross" type="availability" class="icon-img mx-1" src="/images/icons/cross.png">
            <img id="small" type="screen" class="icon-img mx-1" src="/images/icons/smallscreen.png">
            <img id="full" type="screen" class="icon-img mx-1 gray" src="/images/icons/fullscreen.png">
            <input type="submit" value="Сохранить" class="btn btn-primary btn-sm" />
        </div>

        @RenderBody()
    </form>

    <div class="modal" id="modal-main" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Here is inserted modal content in runtime -->
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white mt-auto">
        <div class="text-muted text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            Все права на ККИ Берсерк принадлежат компании «Мир Хобби». Этот сайт не связан с «Миром Хобби».
        </div>
    </footer>
</body>
</html>