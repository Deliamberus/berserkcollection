@model List<WebApplication1.Models.Card>
<main id="cardList" class="text-white container-xxl align-items-center">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col @(Model[i].Currency) @(Model[i].Rare) @(Model[i].Element) @(Model[i].Set)" style="height:290px">
                @if (Model[i].Count > 0)
                {
                    <img class="card-img" src="@Model[i].Image">
                }
                else
                {
                    <img class="card-img gray" src="@Model[i].Image">
                }
                <br />
                <b><label>@Model[i].Number. @Model[i].Name</label></b><br />
                <input type="hidden" name="cards[@i].Name" value="@Model[i].Name">
                <label class="minus">-</label>
                <label class="count">@Model[i].Count</label>
                <input class="count" type="hidden" name="cards[@i].Count" value="@Model[i].Count">
                <label class="plus">+</label>
            </div>
        }
    </div>
</main>